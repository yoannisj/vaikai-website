  {% call pop.base({ name: 'features-video-1' }, '') %}
    {{ vid.vimeo({
      id: 151007297
    }, 'js-objfit', popup_condition) }}
  {% endcall %}

  {% call pop.base({ name: 'features-video-2' }, '') %}
    {{ vid.vimeo({
      id: 151007294
    }, 'js-objfit', popup_condition) }}
  {% endcall %}

  {% call pop.base({ name: 'features-video-3' }, '') %}
    {{ vid.vimeo({
      id: 152263409
    }, 'js-objfit', popup_condition) }}
  {% endcall %}

  {% call pop.base({ name: 'features-video-4' }, '') %}
    {{ vid.vimeo({
      id: 151007296
    }, 'js-objfit', popup_condition) }}
  {% endcall %}

  {% call pop.base({ name: 'features-video-5' }, '') %}
    {{ vid.vimeo({
      id: 151007295
    }, 'js-objfit', popup_condition) }}
  {% endcall %}

  {% call pop.base({ name: 'features-video-6' }, '') %}
    {{ vid.vimeo({
      id: 152263405
    }, 'js-objfit', popup_condition) }}
  {% endcall %}

  {{ super() }}

  {# Write custom js in 'src/assets/scripts/preorder.js' - gets loaded in following line #}
  <script src="{{ 'js/preorder.js' }}"></script>
{% endblock %}